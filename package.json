  },
  "tags": [
    "orm",
    "typescript",
    "typescript-orm",
    "typeorm-sample",
    "typeorm-example"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^15.12.4",
    "jest": "26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4",
    "lodash": "^4.17.21",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.34"
  },
  "dependencies": {

  },
  "scripts": {
    "start": "tsc && node src/index.js",
    "build": "tsc && cp package.json dist/package.json",
    "typeorm": "./node_modules/.bin/typeorm ",
    "format": "prettier --write \"**/*.ts\"",
    "check": "prettier --check \"**/*.ts\"",
    "test": "jest --passWithNoTests  --testTimeout=450000 "
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
